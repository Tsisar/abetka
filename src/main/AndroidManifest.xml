<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.tsisar.abetka">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="ua.tsisar.abetka.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ua.tsisar.abetka.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ua.tsisar.abetka.activity.MainActivity" />
        <activity android:name="ua.tsisar.abetka.activity.GridActivity" />
        <activity android:name="ua.tsisar.abetka.activity.CoffeeActivity" />
        <activity android:name="ua.tsisar.abetka.activity.SettingsActivity" />
        <activity android:name="ua.tsisar.abetka.activity.GameActivity"/>
    </application>

</manifest>
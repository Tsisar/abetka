<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_incorrect_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickReturn">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal|bottom">

        <ua.tsisar.abetka.view.StrokeTextView
            android:id="@+id/incorrect_answer_letter"
            android:layout_width="wrap_content"
            android:layout_height="86sp"
            android:textSize="64sp"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="4sp" />

        <ua.tsisar.abetka.view.StrokeTextView
            android:id="@+id/incorrect_answer_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="32sp"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="4sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            app:srcCompat="@mipmap/game_no" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>